/* pages/order/FoodEvaluate/FoodEvaluate.wxss */
.ConsumerFoodEvaluate{
  background-color: rgb(247, 248, 250);
}

.nav_div{
  height: 60px;
  background-color: red;
  text-align: center;
  color: white;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
}

.nav_title{
  padding-top: 20px;
}

.main-content{
  margin-top: 60px;
  height: calc(100vh - 60px);
}

.food-evaluate-area{
  text-align: left;
  background-color: white;
  overflow: auto;
  height: calc(100vh - 60px);
  padding-left: 10px;
  padding-right: 10px;
}

.evaluation-field{
  border-style: solid;
  border-width: 1px;
  border-color: rgb(247, 248, 250);
  margin-top: 10px;
  margin-bottom: 10px;
}
.go-back-icon{
  float: left;
  margin-top: 17px;
  margin-left: 10px;
}

.food-name{
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.title{
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 10px;
}