/* pages/home/HomePage/HomePage.wxss */

.background{
  background-color: rgb(245, 244, 245);
  height: calc(100vh);
  overflow: auto;
}
.nav_div {
  height: 60px;
  background-color: red;
  text-align: center;
  color: white;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
}
.nav_title {
  padding-top: 20px;
  font-weight: bold;
}
.content {
  width: 90%;
  margin-left: 5%;
  margin-top: 65px;
  margin-bottom: 70px;
  overflow: scroll;
}
.carouseImage {
  width: 100%;
  height: 180px;
  border-radius: 20px;
}
.card {
  margin-top: 10px;
  padding: 14px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 0 1px 2px #ebedf0;
}
.card .title {
  text-align: left;
  margin: 0 0 5px 0;
  font-weight: bold;
}
.categories-card {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.category-card-item {
  font-size: 13px;
  padding: 5px;
  text-align: center;
  width: 70px;
}
.food-card-body {
  overflow-x: auto;
}
.food-card-body .row {
  width: 1600px;
  display: flex;
}

.food-card-row-item{
  margin-left: 10px;
}

.recommend-foods-area {
  text-align: left;
}
.food-area {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.recommend-foods-area-card{
  margin-left: 0px;
}

.recommend-food-title{
  margin: 15px 0 15px 0;
  font-weight: bold;
  font-size: 18px;
}
